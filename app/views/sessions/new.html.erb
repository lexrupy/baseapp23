<% content_for :header do -%>
  <%= APP_CONFIG.site_name %> Login
<% end -%>
<% form_tag session_path, :id => 'new_session' do -%>
  <p><label for="login"><%= User.human_attribute_name('login') %></label><br/>
  <%= text_field_tag 'login' %></p>
  <p><label for="password"><%= User.human_attribute_name('password') %></label><br/>
  <%= password_field_tag 'password' %></p>
  <ul>
    <li><%= link_to t('.sign_up', :default => "Sign up for an account now"), signup_url %></li>
    <li><%= link_to t('.having_trouble', :default => "Having trouble logging in?"), user_troubleshooting_url %></li>
  </ul>
  <div id="submitbutton">
    <p><%= submit_tag t('.submit', :default => 'Log in &raquo;') %></p>
  </div>
<% end -%>
<%= javascript_tag "Form.focusFirstElement('new_session')" %>

