<%= content_for :header, "Listing announcements" %>
<% content_for :additional_css do %>
  <%= stylesheet_link_merged :nosidebar %>
<% end -%>
<span style="float:left;margin-top:5px;"><%= link_to_new Admin::Announcement %></span>
<br />
<table class="index">
  <tr>
    <th width="50%">Title</th>
    <th>Starts at</th>
    <th>Ends at</th>
    <th>&nbsp;</th>
  </tr>
<% for announcement in @announcements %>
  <tr>
    <td><%=h announcement.title %></td>
    <td><%=h announcement.starts_at.to_s(:short) %></td>
    <td><%=h announcement.ends_at.to_s(:short) %></td>
    <td class="actions">
      <%= link_to_show announcement %> |
      <%= link_to_edit announcement %> |
      <%= link_to_destroy announcement %>
    </td>
  </tr>
<% end %>
</table>
<%= will_paginate @announcements %>
