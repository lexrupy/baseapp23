<%= content_for :header, "Listing resources" %>
<% content_for :additional_css do %>
  <%= stylesheet_link_merged :nosidebar %>
<% end -%>
<span style="float:left;margin-top:5px;"><%= link_to_new new_admin_resource_path, :text => 'New resource' %></span>
<br />
<table class="index">
  <tr>
    <th>Identifier</th>
    <th>Name</th>
    <th>Description</th>
    <th>&nbsp;</th>
  </tr>
<% for res in @resources %>
  <tr>
    <td><%=h res.resource %></td>
    <td><%=h res.name %></td>
    <td><%=h res.description %></td>
    <td class="actions">
      <%= link_to_show admin_resource_path(res) %> |
      <%= link_to_edit edit_admin_resource_path(res) %> |
      <%= link_to_destroy admin_resource_path(res) %>
    </td>
  </tr>
<% end %>
</table>
<%= will_paginate @resources %>
