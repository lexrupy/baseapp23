<% content_for :header do -%>
  <%= configatron.site_name %> Users
<% end -%>
<% content_for :sidebar do -%>
  <ul class="sidebar_menu">
    <li><%= link_to_search admin_users_url, :text => "All users" %></li>
    <li><%= link_to_search active_admin_users_url, :text => "Active users only" %></li>
    <li><%= link_to_search suspended_admin_users_url, :text => "Suspended users only" %></li>
    <li><%= link_to_search pending_admin_users_url, :text => "Pending users only" %></li>
    <li><%= link_to_search deleted_admin_users_url, :text => "Deleted users only" %></li>
  </ul>
<% end -%>
<span style="float:left;margin-top:5px;"><%= link_to_new new_admin_user_path, :text => 'New user' %></span>
<br />
<table class="index">
  <tr>
  <th>ID</th>
  <th>Login</th>
  <th>Email</th>
  <th>Status</th>
  </tr>
<% # TODO: (base_app) Add some sort of search feature to easily find users %>
<% for user in @users %>
  <tr>
  <td><%=h user.id %></td>
  <td><%= link_to_show admin_user_url(user), :text => h(user.login) %></td>
  <td><%=h user.email %></td>
  <td><%=h user.state %></td>
    <td class="actions">
    <%= link_to_activate_user(user) %>
    <%= link_to_suspend_user(user) %>
    <%= link_to_unsuspend_user(user) %>
    <%= link_to_delete_user(user) %>
  </td>
  </tr>
<% end %>
</table>
<%= will_paginate @users %>
