<% content_for :header do -%>
 	<%= configatron.site_name %> Account for <em><%=h @user.login %></em>
<% end -%>
<% content_for :sidebar do -%>
<h2>Account status: <%= @user.state.to_s.humanize %></h2>
<ul class="sidebar_menu">
    <li><%= link_to_back admin_users_path, :text => 'Back to user list' %></li>
    <li><%= link_to_edit edit_admin_user_path(@user) %></li>
    <li><strong>Actions</strong></li>
    <li><%= link_to_activate_user(@user) %></li>
    <li><%= link_to_suspend_user(@user) %></li>
    <li><%= link_to_unsuspend_user(@user) %></li>
    <li><%= link_to_delete_user(@user) %></li>
    <li><%= link_to_purge_user(@user) %></li>
</ul>
<% end -%>
<table class="overview">
  <%= cell "Login", h(@user.login) %>
  <%= cell "User ID", h(@user.id) %>
  <%= cell_separator %>
  <%= cell "Email", h(@user.email) %>
  <%= cell "Password", "#{"*"*8} <small>#{link_to_if !@user.deleted?, "send new password", reset_password_admin_user_url(@user), :method => :put}</small>" %>
  <%= cell_separator %>
  <%= cell "Account created", @user.created_at.to_s(:long) %>
  <%= cell "Last updated", @user.updated_at.to_s(:long) %>
  <%= cell_separator %>
  <% unless @user.roles.blank? -%>
    <%= cell "Current roles", role_list(@user) %>
  <% end -%>
</table>
