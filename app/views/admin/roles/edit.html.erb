<%= content_for :header, t('.header', :default => "Editing Role Access Control") %>
<% content_for :sidebar do %>
  <ul class="sidebar_menu">
    <li><%= link_to_back t('.back', :default => 'Back to roles list'), admin_roles_path %></li>
  </ul>
<% end -%>
<% form_for @role, :url => admin_role_path(@role) do |f| %>
  <%= f.error_messages %>
  <h3><%= f.label :name, Role.human_attribute_name('name') %> <%= h @role.name %></h3>
  <label><%= t('.access_control', :default => 'Access Control') %></label><br />
  <div class="access_control">
    <%= render :partial => 'role_access', :object => @role %>
  </div><br />
  <%= f.submit t('.submit', :default => "Confirm") %>
<% end %>

