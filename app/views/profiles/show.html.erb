<% if @profile.nil? -%>
  <% content_for :header do -%>
    <%= t 'profiles.profile_not_found.header', :default => 'Profile not be found' %>
  <% end -%>
  <p><%= t 'profiles.profile_not_found.text', :default => 'The profile you requested does not exist.' %></p>
<% else -%>
  <% content_for :header do -%>
    <% if current_user == @user -%>
      <%= t '.my_account', :default => 'My account' %>
    <% else -%>
      <%= t '.profile_for', :default => 'Profile for' %> <%= @user.login %>
    <% end -%>
  <% end -%>
  <%= render :partial => 'profiles/my_account' if current_user == @user %>
  <%= render :partial => 'profiles/account_details' if current_user == @user %>
  <%= render :partial => 'profiles/profile_details' %>
<% end -%>

