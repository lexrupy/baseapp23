<% content_for :header do -%>
  <%= t('.header', :default => 'Account Amnesia') %>
<% end -%>
<p><%= t('.message1', :site_name => configatron.site_name,
       :default => "You have indicated you can't remember your #{configatron.site_name} account at all.") %></p>
<p><%= t('.message2', :support_name => configatron.site_name, :support_email => secure_mail_to(configatron.support_email),
       :default => "We can't help you directly to recover you account. Please contact #{configatron.support_name} at #{secure_mail_to configatron.support_email} for more help.") %></p>
<p><%= t('.message3', :register_account_link => link_to_register_account,
       :default => "If you don't have any important data in your account, you may also opt for #{link_to_register_account}.") %></p>
<%= link_to t('.back', :default => "&laquo; Go back"), user_troubleshooting_url %>

