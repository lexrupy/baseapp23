<% content_for :header do -%>
  <%= t('.header', :default => 'Change my email address') %>
<% end -%>
<% form_for :user, @user, :url => update_email_user_url(@user), :html => {:method => :put, :id => 'change_email'} do |f| %>
  <h3><%= t('.title', :default => 'Your new email address') %></h3>
  <p><%= t('.message', :default => 'Please enter your new email address below. Please double-check it, because you may need it later to retrieve your password.') %></p>
  <p><%= text_field_tag 'email', '', :size => 20 %></p>
  <p><%= submit_tag t('.submit', :default => "Change my email address") %> <%= t('.or', :default => 'or') %> <%= link_to t('.back', :default => "forget about it"), profile_url(@user) %></p>
<% end %>
<%= javascript_tag "Form.focusFirstElement('change_email')" %>

