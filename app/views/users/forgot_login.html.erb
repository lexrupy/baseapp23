<% content_for :header do -%>
  <%= t('.header', :default => 'Login Recovery') %>
<% end -%>
<% unless @user.nil? %>
  <p><%= t('.user.message', :site_name => APP_CONFIG.site_name, :user_email => @user.email,
      :default => "An email containing your #{APP_CONFIG.site_name} account's login has been dispatched to you at <em><#{@user.email}</em>.") %></p>
  <div id="submitbutton">
    <p><%= link_to t('.login_now', :default => "Login now &raquo;"), login_url %></p>
  </div>
<% else %>
  <p><%= t('.no_user.message', :default => 'Please enter the email address associated with your account. We will send you an email with your login shortly.') %></p>
  <% form_tag user_forgot_login_url, :method => :put, :id => 'forgot_login' do %>
    <p><label><%= t('.no_user.email_address', :default => 'Your email address') %></label><br />
    <%= text_field_tag :email %></p>
    <div id="submitbutton">
      <p><%= submit_tag t('.submit', :default => 'Send me my login &raquo;') %></p>
    </div>
  <% end %>
<% end %>
<%= link_to t('.back', :default => "&laquo; Go back"), user_troubleshooting_url %>
<%= javascript_tag "Form.focusFirstElement('forgot_login')" %>

