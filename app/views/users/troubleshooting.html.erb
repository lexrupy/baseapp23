<% content_for :header do -%>
  <%= t('.header', :default => 'What seems to be the problem?') %>
<% end -%>
<p><%= t('.message', :site_name => APP_CONFIG.site_name,
        :default => "You have indicated you are having trouble logging in to #{APP_CONFIG.site_name}. What seems to be the problem?") %></p>
<ul>
  <li><%= link_to t('.forgot_password', :default => "I don't remember my password"), user_forgot_password_url %></li>
  <li><%= link_to t('.forgot_login', :default => "I forgot my login, but I know my email"), user_forgot_login_url %></li>
  <li><%= link_to t('.forgot_clueless', :default => "I don't remember my login, email or password!"), user_clueless_url %></li>
</ul>
<p><%= link_to t('.back', :default => "&laquo; Go back"), login_url %></p>

