<%%= content_for :header, t('.header', :default => "<%= singular_name.humanize %>") %>
<%% content_for :sidebar do -%>
  <ul class="sidebar_menu">
    <li><%%= link_to_new t(".new_<%= singular_name %>", :default => "New <%= singular_name.humanize %>"), <%= class_name %> %></li>
    <li class="separator">&nbsp;</li>
    <li><%%= link_to_back t('.back', :default => 'Back to <%= plural_name %> list'), <%= plural_name %>_path %></li>
    <li><%%= link_to_edit t('app.actions.edit', :default => "Edit"), @<%= singular_name %> %></li>
    <li><%%= link_to_destroy t('app.actions.destroy', :default => "Delete"), @<%= singular_name %> %></li>
  </ul>
<%% end -%>
<% for attribute in attributes -%>
<p>
  <b><%%= <%= class_name %>.human_attribute_name('<%= attribute.name %>') %>:</b>
  <%%=h @<%= singular_name %>.<%= attribute.name %> %>
</p>
<% end -%>

